            <Label style="-fx-font-size: 24; -fx-text-fill: #1DB954;" text="Medical App">
               <font>
                  <Font name="Roboto Bold" size="24.0" />
               </font>
            </Label>
            <JFXButton onAction="#showPatients" styleClass="menu-button" text="Patients" />
            <JFXButton onAction="#showUsers" styleClass="menu-button" text="Users" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <Label style="-fx-font-size: 36;" text="Welcome!" BorderPane.alignment="CENTER" />
   </center>
