<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.LoginController">
   <stylesheets>
        <String fx:value="@styles.css" />
    </stylesheets>
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Bienvenido" textFill="white">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <JFXTextField fx:id="usernameField" focusColor="#1abc9c" layoutX="50.0" layoutY="120.0" prefWidth="200.0" promptText="Usuario" styleClass="jfx-text-field" unFocusColor="#bdc3c7" />
      <JFXPasswordField fx:id="passwordField" focusColor="#1abc9c" layoutX="50.0" layoutY="180.0" prefWidth="200.0" promptText="Contraseña" styleClass="jfx-password-field" unFocusColor="#bdc3c7" />
      <JFXButton fx:id="loginButton" buttonType="RAISED" layoutX="50.0" layoutY="260.0" onAction="#login" prefHeight="40.0" prefWidth="200.0" styleClass="login-button" text="Iniciar Sesión" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="registerButton" layoutX="50.0" layoutY="320.0" onAction="#showRegister" prefHeight="40.0" prefWidth="200.0" styleClass="register-button" text="¿No tienes cuenta? Regístrate" textFill="#1abc9c" />
   </children>
</AnchorPane>
