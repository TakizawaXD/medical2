<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.RegisterController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="Crear Cuenta" textFill="white">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <JFXTextField fx:id="usernameField" focusColor="#1abc9c" layoutX="50.0" layoutY="100.0" prefWidth="200.0" promptText="Usuario" style="-fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;" unFocusColor="#bdc3c7" />
        <JFXPasswordField fx:id="passwordField" focusColor="#1abc9c" layoutX="50.0" layoutY="160.0" prefWidth="200.0" promptText="Contraseña" style="-fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;" unFocusColor="#bdc3c7" />
        <JFXPasswordField fx:id="confirmPasswordField" focusColor="#1abc9c" layoutX="50.0" layoutY="220.0" prefWidth="200.0" promptText="Confirmar Contraseña" style="-fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;" unFocusColor="#bdc3c7" />
        <JFXComboBox fx:id="roleComboBox" focusColor="#1abc9c" layoutX="50.0" layoutY="280.0" prefWidth="200.0" promptText="Rol" style="-fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7;" unFocusColor="#bdc3c7" />
        <JFXButton fx:id="registerButton" buttonType="RAISED" layoutX="50.0" layoutY="340.0" onAction="#register" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #1abc9c;" text="Registrarse" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </JFXButton>
        <JFXButton fx:id="backToLoginButton" layoutX="50.0" layoutY="400.0" onAction="#backToLogin" prefHeight="40.0" prefWidth="200.0" style="-fx-border-color: #1abc9c; -fx-border-width: 1px;" text="Volver al Inicio" textFill="#1abc9c" />
    </children>
</AnchorPane>
