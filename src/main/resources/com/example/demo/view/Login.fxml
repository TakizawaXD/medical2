<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.LoginController">
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Bienvenido">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="50.0" layoutY="120.0" prefWidth="200.0" promptText="Usuario" />
      <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="180.0" prefWidth="200.0" promptText="Contraseña" />
      <Button fx:id="loginButton" layoutX="50.0" layoutY="260.0" onAction="#login" prefHeight="40.0" prefWidth="200.0" text="Iniciar Sesión" />
      <Button fx:id="registerButton" layoutX="50.0" layoutY="320.0" onAction="#showRegister" prefHeight="40.0" prefWidth="200.0" text="¿No tienes cuenta? Regístrate" />
   </children>
</AnchorPane>
