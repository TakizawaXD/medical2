<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.RegisterController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="Crear Cuenta">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="50.0" layoutY="100.0" prefWidth="200.0" promptText="Usuario" />
        <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="160.0" prefWidth="200.0" promptText="Contraseña" />
        <PasswordField fx:id="confirmPasswordField" layoutX="50.0" layoutY="220.0" prefWidth="200.0" promptText="Confirmar Contraseña" />
        <ComboBox fx:id="roleComboBox" layoutX="50.0" layoutY="280.0" prefWidth="200.0" promptText="Rol" />
        <Button fx:id="registerButton" layoutX="50.0" layoutY="340.0" onAction="#register" prefHeight="40.0" prefWidth="200.0" text="Registrarse" />
        <Button fx:id="backToLoginButton" layoutX="50.0" layoutY="400.0" onAction="#backToLogin" prefHeight="40.0" prefWidth="200.0" text="Volver al Inicio" />
    </children>
</AnchorPane>
