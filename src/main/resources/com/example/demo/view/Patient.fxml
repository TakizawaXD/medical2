<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.PatientController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="740.0" prefWidth="350.0" spacing="10.0">
            <children>
                <Label text="Gestión de Pacientes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <TabPane prefHeight="600.0" prefWidth="350.0">
                    <tabs>
                        <Tab text="Información Personal">
                            <content>
                                <GridPane hgap="10.0" vgap="10.0" style="-fx-padding: 10;">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Nombre:" GridPane.rowIndex="0" />
                                        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Apellidos:" GridPane.rowIndex="1" />
                                        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Cédula:" GridPane.rowIndex="2" />
                                        <TextField fx:id="cedulaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Email:" GridPane.rowIndex="3" />
                                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <Label text="Fecha de Nacimiento:" GridPane.rowIndex="4" />
                                        <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                        <Label text="Edad:" GridPane.rowIndex="5" />
                                        <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                        <Label text="Dirección:" GridPane.rowIndex="6" />
                                        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                        <Label text="Teléfono:" GridPane.rowIndex="7" />
                                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                        <Label text="Género:" GridPane.rowIndex="8" />
                                        <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Información Médica">
                            <content>
                                <GridPane hgap="10.0" vgap="10.0" style="-fx-padding: 10;">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Grupo Sanguíneo:" GridPane.rowIndex="0" />
                                        <ComboBox fx:id="bloodTypeField" prefWidth="210.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Alergias:" GridPane.rowIndex="1" />
                                        <TextField fx:id="allergiesField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Historial Médico:" GridPane.rowIndex="2" />
                                        <TextArea fx:id="medicalHistoryField" prefHeight="150.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Contacto y Seguro">
                            <content>
                                <GridPane hgap="10.0" vgap="10.0" style="-fx-padding: 10;">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Contacto de Emergencia:" GridPane.rowIndex="0" />
                                        <TextField fx:id="emergencyContactNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Teléfono de Emergencia:" GridPane.rowIndex="1" />
                                        <TextField fx:id="emergencyContactPhoneField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Aseguradora:" GridPane.rowIndex="2" />
                                        <TextField fx:id="insuranceProviderField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Nº de Póliza:" GridPane.rowIndex="3" />
                                        <TextField fx:id="policyNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button onAction="#addPatient" text="Añadir Paciente" />
                        <Button onAction="#updatePatient" text="Actualizar Paciente" />
                        <Button onAction="#deletePatient" text="Eliminar Paciente" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <TableView fx:id="patientTable" layoutX="378.0" layoutY="14.0" prefHeight="350.0" prefWidth="970.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Nombre" />
                <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Apellidos" />
                <TableColumn fx:id="cedulaColumn" prefWidth="90.0" text="Cédula" />
                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Teléfono" />
                <TableColumn fx:id="bloodTypeColumn" prefWidth="75.0" text="Grupo Sang." />
                <TableColumn fx:id="insuranceProviderColumn" prefWidth="120.0" text="Aseguradora" />
            </columns>
        </TableView>

        <VBox layoutX="378.0" layoutY="375.0" prefHeight="380.0" prefWidth="970.0" spacing="10.0">
            <children>
                <Label text="Historial de Visitas" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <HBox spacing="10.0">
                    <children>
                        <TableView fx:id="encounterTable" prefHeight="300.0" prefWidth="300.0">
                            <columns>
                                <TableColumn fx:id="encounterDateColumn" prefWidth="150.0" text="Fecha de Visita" />
                                <TableColumn fx:id="encounterReasonColumn" prefWidth="150.0" text="Motivo" />
                            </columns>
                        </TableView>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Detalles de la Visita:" style="-fx-font-weight: bold;" />
                                <Label text="Diagnóstico:" />
                                <TextArea fx:id="diagnosisArea" editable="false" prefHeight="60.0" wrapText="true" />
                                <Label text="Notas del Médico:" />
                                <TextArea fx:id="doctorNotesArea" editable="false" prefHeight="100.0" wrapText="true" />
                                <Label text="Plan de Tratamiento:" />
                                <TextArea fx:id="treatmentPlanArea" editable="false" prefHeight="80.0" wrapText="true" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                 <Button onAction="#openAddEncounterWindow" text="Añadir Nueva Visita" />
            </children>
        </VBox>
    </children>
</AnchorPane>
